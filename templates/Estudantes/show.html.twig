                <table class="table table-sm ">
                    <tbody>

                    <tbody>
                    <tr>
                        {{ include('Estudantes/_delete_form.html.twig') }}
                        <a href="{{ path('Estudante_index') }}" class="btn btn-sm btn-primary mr-2 ml-2"><i class="fas fa-list"></i>Voltar a Lista</a>
