{% extends 'base.html.twig' %}

{% block title %}Turma index{% endblock %}

{% block body %}
<div class="col-lg-12">
    <h3> Listar Turma</h3>
    <a href="{{ path('turma_new') }}" class="btn btn-sm btn-primary">Criar Novo</a>
    <div class="card my-2">
        <div class="card-header">
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm mb-0 table-striped">
                    <thead>
                    <tr>
                        <th class="px-5 py-3">Nome Turma</th>
                        <th class="py-3">Delegado</th>
                        <th class="py-3">E-mail</th>
                        <th class="py-3">Telefone</th>
                        <th class="py-3">Acções</th>
                    </tr>
                    </thead>

                    </thead>
                    <tbody id="customers">
        {% for turma in turmas %}
            <tr class="btn-reveal-trigger">
                <td class="py-2">{{ turma.nomeTurma }}</td>
                <td class="py-2">{{turma.delegado }}</td>
                <td class="py-2">{{ turma.email }}</td>
                <td class="py-2">{{ turma.phone }}</td>
                <td>
                    <a href="{{ path('turma_show', {'id': turma.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('turma_edit', {'id': turma.id}) }}" class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></a>
                    <a href="{{path('curso_delete', {'id': turma.id})}}" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



{% endblock %}

