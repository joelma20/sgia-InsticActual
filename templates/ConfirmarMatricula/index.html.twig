{% extends 'base.html.twig' %}

{% block title %}Incrição index{% endblock %}

{% block body %}
<div class="col-lg-12">
    <h3>Listar Inscrição</h3>


    <div class="card my-2">
        <div class="card-header">
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm mb-0 table-striped">
                    <thead>
                    <tr>
                        <th class="px-5 py-3">Nome Estudante</th>
                        <th class="py-3">Num Processo</th>
                        <th class="py-3">BI</th>
                        <th class="py-3">Acções</th>
                    </tr>
                    </thead>
                         </thead>
                    <tbody id="customers">
                    {% for estudiante in estudiantes %}
                        <tr class="btn-reveal-trigger">
                            <td class="py-2">{{estudiante.nomeEstudiante }}</td>
                            <td class="py-2">{{ estudiante.NumProcesso }}</td>
                            <td class="py-2">{{ estudiante.BI }}</td>

                            <td>
                                <a href="{{ path('Confirmar_show', {'id': estudiante.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                                <a href="{{ path('Confirmar_edit', {'id': estudiante.id}) }}" class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i>Confirmar Matrícula</a>
                                <a href="{{path('Confirmar_delete', {'id': estudiante.id})}}" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


{% endblock %}
