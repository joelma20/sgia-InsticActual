{% extends 'base.html.twig' %}

{% block title %}Usuário index{% endblock %}

{% block body %}
<div class="col-lg-12">
    <h3>Listar Usuário </h3>

    <a href="{{ path('user_new') }}" class="btn btn-sm btn-primary">Criar Novo</a>

    <div class="card">
        <div class="card-header">
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm mb-0 table-striped">
                    <thead>
                    <tr>
                        <th class="px-5 py-3">Nome Usuário</th>
                        <th class="py-3">Papel</th>
                        <th class="py-3">Nome</th>
                        <th class="py-3">Está Activo</th>
                        <th class="py-3">Acções</th>
                    </tr>
                    </thead>

                    </thead>
                    <tbody id="customers">
                    {% for user in users %}
                    <tr class="btn-reveal-trigger">
                        <td class="py-2">{{ user.username }}</td>
                        <td class="py-2">{{ user.roles ? user.roles|json_encode : ''  }}</td>
                        <td class="py-2">{{ user.name }}</td>
                        <td class="py-2">{{ user.IsActive ? 'Yes' : 'No'   }}</td>
                        <td>
                            <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></a>
                            <a href="{{path('user_delete', {'id': user.id})}}" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



{% endblock %}