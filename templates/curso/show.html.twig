{% extends 'base.html.twig' %}

{% block title %}Mostrar Curso{% endblock %}

{% block body %}
<div class="col-sm-8">
    <div class="card">
        <div class="card-header">

            <h4> Curso {{ curso.nomeCurso}}</h4>
            <div class="card-body">
                <table class="table table-sm ">
                    <tbody>

                    <tbody>
            <tr>
                {{ include('curso/_delete_form.html.twig') }}
                <a href="{{ path('curso_index') }}" class="btn btn-sm btn-primary mr-2 ml-2"><i class="fas fa-list"></i>Voltar a Lista</a>
                <a href="{{ path('curso_edit', {'id': curso.id}) }}" class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i>Editar</a>
            </tr>
            <tr>
                <th>Nome Curso</th>
                <td>{{ curso.nomeCurso}}</td>
            </tr>
            <tr>
                <th>Coordenador</th>
                <td>{{  curso.Coordinador  }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{  curso.email   }}</td>
            </tr>
            <tr>
                <th>Telefone</th>
                <td>{{  curso.phone }}</td>
            </tr>

                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>



{% endblock %}






