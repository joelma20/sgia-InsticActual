{% extends 'base.html.twig' %}

{% block title %}Semestre index{% endblock %}

{% block body %}
<div class="col-lg-8">
    <h3> Listar Semestre</h3>
    <a href="{{ path('semestre_new') }}" class="btn btn-sm btn-primary">Criar Novo</a>
    <div class="card">
        <div class="card-header">
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm mb-0 table-striped">
                    <thead>
                    <tr>
                        <th class="px-5 py-3">Nome Semestre</th>
                        <th class="py-3">Acções</th>
                    </tr>
                    </thead>
                    </thead>
                    <tbody id="customers">
                    {% for semestre in semestres %}
                    <tr class="btn-reveal-trigger">
                        <td class="py-2">{{ semestre.nomeSemestre }}</td>
                        <td>
                            <a href="{{ path('semestre_show', {'id': semestre.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('semestre_edit', {'id': semestre.id}) }}" class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></a>
                            <a href="{{path('semestre_delete', {'id': semestre.id})}}" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



{% endblock %}



