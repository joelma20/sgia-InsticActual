{% extends 'base.html.twig' %}

{% block title %}Ano Acadêmico index{% endblock %}

{% block body %}

<div class="mx-auto">
<div class="col-lg-8">
    <h3>Listar Ano Acadêmico</h3>

    <a href="{{ path('ano_academico_new') }}" class="btn btn-sm btn-primary">Criar Novo</a>

    <div class="card my-2">
        <div class="card-header">
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm mb-0 table-striped">
                    <thead>
                    <tr>
                        <th class="px-5 py-3">Nome Ano Acadêmico</th>
                        <th class="py-3">Acções</th>
                    </tr>
                    </thead>
                    <tbody id="customers">
                    {% for ano_academico in ano_academicos %}
                    <tr class="btn-reveal-trigger">
                        <td class="py-2">{{ ano_academico.nomeAnoAcademico }}</td>
                        <td>
                            <a href="{{ path('ano_academico_show', {'id': ano_academico.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('ano_academico_edit', {'id': ano_academico.id}) }}" class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></a>
                            <a href="{{path('ano_academico_delete', {'id': ano_academico.id})}}" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
</div>



{% endblock %}


