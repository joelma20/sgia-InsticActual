{% extends 'base.html.twig' %}

{% block title %}Estudante-Turma index{% endblock %}

{% block body %}
<div class="col-lg-12">
    <h3> Listar Estudante-Turma</h3>

    <div class="card my-2">
        <div class="card-header">
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-sm mb-0 table-striped">
                    <thead>
                    <tr>
                        <th class="px-5 py-3">Ano Lectivo</th>
                        <th class="py-3">Curso</th>
                        <th class="py-3">Ano Acadêmico</th>
                        <th class="py-3">Semestre</th>
                        <th class="py-3">Turma</th>
                        <th class="py-3">Acções</th>
                    </tr>
                    </thead>

                    </thead>
                    <tbody id="customers">
        {% for turma in turmas %}

            <tr class="btn-reveal-trigger">
                <td class="py-2">{{ turma.anoAcademico.curso.anoLectivo}}</td>
                <td class="py-2">{{turma.anoAcademico.curso.getNomeCurso()}}</td>
                <td class="py-2">{{  turma.anoAcademico.getNomeAnoAcademico()}}</td>
                <td class="py-2">{{turma.semestre.getNomeSemestre()}}</td>
                <td class="py-2">{{ turma.getNomeTurma() }}</td>
                <td>
                    <a href="{{ path('EstudanteTurma_Estudantes', {'idT': turma.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('turma_edit', {'id': turma.id}) }}" class="btn btn-sm btn-secondary"><i class="fas fa-edit"></i></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



{% endblock %}


