{% extends 'base.html.twig' %}

{% block title %}Professor index{% endblock %}

{% block body %}

    <div class="col-lg-12">

        <h3>Lista dos Professores</h3>
        <a href="{{ path('professor_new') }}" class="btn btn-primary">Criar Novo</a>

        <div class="card my-2">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm mb-0 table-striped">
                        <thead>
                        <tr>
                            <th class="px-5 py-3">Nome</th>
                            <th class="py-3">Telefone</th>
                            <th class="py-3">E-mail</th>
                            <th class="py-3">Acção</th>
                        </tr>
                        </thead>
                        <tbody id="customers">
                        {% for professor in professors %}
                        <tr class="btn-reveal-trigger">
                            <td class="py-2">{{ professor.nome }}</td>
                            <td><span class="badge badge-rounded badge-primary">{{ professor.telefone }}</span></td>
                            <td class="py-2">{{ professor.email }}</td>
                            <td>
                                <a href="{{ path('professor_show', {'id': professor.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></a>
                                <a href="{{ path('professor_edit', {'id': professor.id}) }}" class="btn btn-sm btn-secondary"><i class="fa fa-edit"></i></a>
                                <a href="{{ path('professor_delete', {'id': professor.id}) }}" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
