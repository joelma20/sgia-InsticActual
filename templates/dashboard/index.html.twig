<!-- END nav -->
    <div class="wrapper-login">
          <div class="p-4 p-md-5 login-container">
            <h3 class="mb-4" style="font-size: 2rem; color: #0c0c0c; font-family: "Poppins", Arial, sans-serif">Login</h3>

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Estás Logado como {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}


                <label for="inputUsername">Usuário</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                <label for="inputPassword" class="mt-3">Senha</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden"
                       name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-lg btn-primary mt-4 px-5 b-radius-5" type="submit">
                    Entrar
                </button>
            </form>
        </div>
    </div>







